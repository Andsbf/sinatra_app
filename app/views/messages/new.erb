 <h1>Write in the wall!!!</h1>
 <hr/>

<% if @message.errors.any? %>
  <div>
    <strong>Some issues with your message, please fix them:</strong>
    <ul>
      <% @message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/messages/new">
  <div>
    <label>Author:</label>
        <input type="text" name="author" placeholder='Name' value="<%= @message.author %>">
  </div>
  <div>
    <label>Subject:</label>
       <input type="text" name="title" placeholder='Title' value="<%= @message.title %>">
  </div>
  <div>
    <label>Content:</label>
    <input type="text" name="content" placeholder='Content' value="<%= @message.content %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form> 